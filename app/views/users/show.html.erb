<br>
<% end %> <p>
</section>

<%= button_to "Update", edit_user_path(@user), :method => :get %>
<br>
<%= button_to "Tell us a story", new_story_path, :method => :get %>
<br>
<%= button_to "See all creeps", users_path, :method => :get %>
<br>
<%= button_to "BIG RED BUTTON OF SELF-DESTRUCTION", user_path(@user), :method => :delete %>

